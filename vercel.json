{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/client/dist/$1",
            "continue": true
        },
        {
            "source": "/(.*)",
            "destination": "/client/dist/index.html"
        }
    ]
}