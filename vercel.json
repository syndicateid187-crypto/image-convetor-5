{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/assets/(.*)",
            "dest": "client/assets/$1",
            "check": true
        },
        {
            "src": "/(.*)",
            "dest": "client/$1",
            "check": true
        },
        {
            "src": "/(.*)",
            "status": 200,
            "dest": "client/index.html"
        }
    ]
}